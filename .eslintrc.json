{
  "extends": [
    "standard",
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:promise/recommended",
    "airbnb-base",
    "plugin:mocha/recommended",
    "plugin:chai-expect/recommended",
    "prettier",
    "@toruslabs/eslint-config-typescript"
  ],
  "plugins": ["prettier", "@babel", "promise", "import", "mocha", "chai-expect", "simple-import-sort"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 11,
    "babelOptions": {
      "configFile": "./tsconfig.json"
    }
  },
  "ignorePatterns": "*.config.js",
  "rules": {
    "promise/catch-or-return": [2, { "allowFinally": true }],
    "no-bitwise": 0,
    "no-restricted-syntax": 0,
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error",
    "operator-linebreak": 0,
    "object-curly-newline": 0,
    "semi": [2, "never"],
    "no-underscore-dangle": 0,
    "quotes": [2, "single"],
    "max-len": [
      2,
      {
        "code": 150
      }
    ],
    "no-console": 0,
    "import/prefer-default-export": 0,
    "no-nested-ternary": 0,
    "no-confusing-arrow": 0,
    "linebreak-style": 0,
    "no-extra-semi": 0,
    "no-unused-vars": [2, { "args": "after-used", "argsIgnorePattern": "_" }],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "printWidth": 150,
        "semi": false
      }
    ]
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "globals": {
    "document": true,
    "fetch": true,
    "jest": true,
    "it": true,
    "beforeEach": true,
    "afterEach": true,
    "describe": true,
    "expect": true
  }
}
